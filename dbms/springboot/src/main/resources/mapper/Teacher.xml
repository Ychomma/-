<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.TeacherMapper">

    <select id="list" resultType="com.example.springboot.entity.Teacher">
        select *
        from teacher
        order by tno desc
    </select>
    <delete id="deleteById">
        delete
        from teacher
        where tno = #{tno}
    </delete>

    <update id="updateById">
        update teacher
        set
            tname= #{tname},
            cno=#{cno},
            phone=#{phone}
        where tno = #{tno}
    </update>
    <insert id="save">
        insert into teacher (tno,tname,cno,phone)
        values (#{tno}, #{tname},#{cno},#{phone})
    </insert>

    <select id="getById" resultType="com.example.springboot.entity.Teacher">
        select *
        from teacher
        where tno = #{tno}
    </select>


</mapper>