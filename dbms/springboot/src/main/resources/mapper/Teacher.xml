<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.TeacherMapper">

    <select id="list" resultType="com.example.springboot.entity.Teacher">
        select *
        from teacher
        order by tno desc
    </select>
    <delete id="deleteById">
        delete
        from teacher
        where tno = #{tno}
    </delete>

    <update id="updateById">
        update teacher
        set
            tname= #{tname},
            cno=#{cno}
        where tno = #{tno}
    </update>
    <insert id="save">
        insert into teacher (tno,tname,cno)
        values (#{tno}, #{tname},#{cno})
    </insert>

    <select id="getById" resultType="com.example.springboot.entity.Teacher">
        select *
        from teacher
        where tno = #{tno}
    </select>

    <select id="listByCondition" resultType="com.example.springboot.entity.Teacher">
        select *
        from teacher
        <where>
            <if test="tname != null and tname != ''">
                tname like concat('%', #{tname}, '%')
            </if>
            <if test="cno  != null and cno != ''">
                cno like concat('%', #{cno}, '%')
            </if>
        </where>
        order by tno desc
    </select>
</mapper>